<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_card"
    android:padding="6dp">

    <!-- Full Header (with gradient) -->
    <LinearLayout
        android:id="@+id/header_full"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/header_gradient"
        android:paddingStart="8dp"
        android:paddingEnd="6dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PARAULA DEL DIA"
            android:textSize="9sp"
            android:textColor="@color/text_on_header"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/refresh_button_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="↻"
            android:textSize="14sp"
            android:textColor="@color/text_on_header" />

    </LinearLayout>

    <!-- Minimal Header (text only, no background) -->
    <LinearLayout
        android:id="@+id/header_minimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:paddingStart="8dp"
        android:paddingEnd="6dp"
        android:paddingBottom="2dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Paraula del Dia"
            android:textSize="8sp"
            android:textColor="@color/text_hint"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/refresh_button_minimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="↻"
            android:textSize="12sp"
            android:textColor="@color/text_hint" />

    </LinearLayout>

    <!-- Content Area (CLICKABLE) -->
    <LinearLayout
        android:id="@+id/content_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <!-- Catalan Word -->
        <TextView
            android:id="@+id/catalan_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Em dic"
            android:textSize="18sp"
            android:textColor="@color/text_word"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- English Translation (hidden by default) -->
        <TextView
            android:id="@+id/english_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My name is"
            android:textSize="12sp"
            android:textColor="@color/text_translation"
            android:visibility="gone"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Catalan Example -->
        <TextView
            android:id="@+id/catalan_example"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Em dic Anna, i tu?"
            android:textSize="10sp"
            android:textColor="@color/text_example"
            android:textStyle="italic"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingTop="2dp" />

        <!-- English Example (hidden by default) -->
        <TextView
            android:id="@+id/english_example"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My name is Anna, and you?"
            android:textSize="9sp"
            android:textColor="@color/text_example_english"
            android:textStyle="italic"
            android:visibility="gone"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Hint -->
        <TextView
            android:id="@+id/hint_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tap_to_reveal"
            android:textSize="8sp"
            android:textColor="@color/text_hint"
            android:gravity="end" />

    </LinearLayout>

</LinearLayout>
